<section
  class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg p-8 max-w-2xl w-full"
>
  <h2 class="text-2xl font-bold text-center mb-2">Search Your Record</h2>
  <p class="text-sm text-slate-600 text-center mb-6">
    Provide your details exactly as written during your exam registration.
  </p>

  <form method="POST" action="/search" class="grid grid-cols-1 grid-row gap-4">
    <div class="md:col-span-3">
      <label class="block text-sm font-medium mb-1">Name</label>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-2">
        <input
          type="text"
          class="w-full rounded-sm border-slate-300 p-3 focus:border-blue-500 focus:ring-0"
          name="firstName"
          placeholder="First Name"
        />
        <input
          type="text"
          class="w-full rounded-sm border-slate-300 p-3 focus:border-blue-500 focus:ring-0"
          name="middleName"
          placeholder="Middle Name"
        />
        <input
          type="text"
          class="w-full rounded-sm border-slate-300 p-3 focus:border-blue-500 focus:ring-0"
          name="lastName"
          placeholder="Last Name"
        />
        <input
          type="text"
          class="w-full rounded-sm border-slate-300 p-3 focus:border-blue-500 focus:ring-0"
          name="suffix"
          placeholder="Suffix"
        />
      </div>
    </div>

    <div class="md:col-span-3">
      <label class="block text-sm font-medium mb-1">Barangay</label>
      <input
        name="barangay"
        type="text"
        required
        class="w-full rounded-xl border-slate-300 p-4 focus:border-blue-500 focus:ring-0"
        placeholder="e.g., District I"
      />
    </div>

    <div class="md:col-span-3">
      <label class="block text-sm font-medium mb-1">School (Exam Venue)</label>
      <select
        name="school"
        required
        class="w-full rounded-xl border-slate-300 p-4 focus:border-blue-500 focus:ring-0"
      >
        <option value="" disabled selected>Select your school</option>
        <% for (const s of schools) { %>
        <option value="<%= s %>"><%= s %></option>
        <% } %>
      </select>
    </div>

    <div class="md:col-span-3">
      <button
        type="submit"
        class="w-full px-4 py-2 rounded-xl bg-blue-600 text-white hover:bg-blue-700 transition"
      >
        Search
      </button>
    </div>
  </form>

  <p class="mt-6 text-sm text-slate-500 text-center">
    <strong>Tip:</strong> If your name don't have a middle name, Just leave it
    blank.
  </p>
</section>
