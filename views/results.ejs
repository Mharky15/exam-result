<section
  class="bg-white/90 backdrop-blur-sm rounded-2xl shadow-lg p-6 max-w-3xl w-full"
>
  <h2 class="text-xl font-semibold mb-1">Results</h2>
  <p class="text-sm text-slate-600 mb-4">
    Filters:
    <span class="font-medium"
      ><%= filters.firstName %> <%= filters.middleName %> <%= filters.lastName
      %> <%= filters.suffix%></span
    >
    • <span class="font-medium"><%= filters.barangay %></span> •
    <span class="font-medium"><%= filters.school %></span>
  </p>

  <% if (!results || results.length === 0) { %>
  <div class="p-4 border rounded-xl bg-slate-50">
    <p>
      No records found. Please check your inputs or contact PESO Cuyapo Official
      Facebook Page.
    </p>
    <a href="/" class="inline-block mt-3 text-sm underline">Go back</a>
  </div>
  <% } else { %> <% results.forEach((r, idx) => { %>
  <div class="mb-6 border rounded-2xl overflow-hidden">
    <div
      class="px-4 py-3 bg-slate-900 text-white flex items-center justify-between"
    >
      <div class="font-medium">
        Record <%= idx + 1 %> of <%= results.length %>
      </div>
      <div class="text-xs opacity-90">Exam Venue: <%= r.school %></div>
    </div>
    <div class="p-4 grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>
        <div class="text-xs text-slate-500">Name</div>
        <div class="font-semibold">
          <%= r.firstName %> <%= r.middleName ? r.middleName + ' ' : '' %> <%=
          r.lastName%> <%= r.suffix%>
        </div>
      </div>
      <div>
        <div class="text-xs text-slate-500">Barangay</div>
        <div class="font-semibold"><%= r.barangay %></div>
      </div>
      <div>
        <div class="text-xs text-slate-500">School</div>
        <div class="font-semibold"><%= r.school %></div>
      </div>
    </div>
    <div class="p-4">
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm">
          <thead>
            <tr class="bg-slate-100 text-slate-700">
              <th class="text-left p-3 font-medium">Category</th>
              <th class="text-right p-3 font-medium">Score</th>
            </tr>
          </thead>
          <tbody>
            <td class="p-3">Total</td>
            <td class="p-3 text-right"><%= (r.scores) %></td>
          </tbody>
          <tfoot class="bg-slate-100 text-slate-700">
            <tr>
              <td class="p-3 font-medium">Status</td>
              <td class="p-3 text-right font-semibold"><%= r.stats %></td>
            </tr>
          </tfoot>
        </table>
      </div>
      <div class="text-xs italic text-slate-600 mt-3 text-center">
        <p>
          Note: for those Examinees who got a "For Verification" status. Go
          visit PESO Cuyapo and bring your latest Grades. Thank you!
        </p>
      </div>
    </div>
  </div>
  <% }) %>

  <a href="/" class="inline-block text-sm underline">Search again</a>
  <% } %>
</section>
